<Window x:Class="Pract_3.AddElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract_3"
        mc:Ignorable="d"
        Title="AddElement" Height="400" Width="350" Padding="0,0,600,500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" PreviewMouseDown="Window_PreviewMouseDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Добавление элемента" HorizontalAlignment="Center" Margin="0, 10, 0, 0" FontSize="20"></TextBlock>
        <TextBox MaxLength="50" Foreground="Gray" Grid.Row="1" FontSize="17" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Введите название категории" Width="330" x:Name="inputCategory" Height="30" PreviewGotKeyboardFocus="inputCategory_PreviewGotKeyboardFocus" LostKeyboardFocus="inputCategory_LostKeyboardFocus"/>
        <Button FontSize="20" Content="Добавить" Grid.Row="2" Width="150" Height="40" Click="Button_Click"></Button>
    </Grid>
</Window>
